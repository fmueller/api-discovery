{
  "name": "api-discovery-ui",
  "version": "0.1.0",
  "description": "API Discovery Swagger UI",
  "private": true,
  "main": "dist/server/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "build-client": "webpack",
    "build-server": "tsc -p .",
    "build": "npm run build-server && npm run build-client",
    "dist": "npm run clean && npm run build-server && NODE_ENV=production npm run build-client -- -p",
    "start-dist": "NODE_ENV=production API_DISCOVERY_CONF=conf/production.yaml node dist/server/index.js",
    "start": "API_DISCOVERY_CONF=conf/development.yaml nodemon server/index.ts",
    "lint": "eslint client && tslint --type-check --project tsconfig.json",
    "test": "npm run lint && API_DISCOVERY_LOG_LEVEL=warn jest --coverage",
    "prettier": "prettier --print-width=100 --single-quote --write \"{client,server}/**/*.+(js|ts)\""
  },
  "devDependencies": {
    "@types/express": "4.0.35",
    "@types/jest": "19.2.4",
    "@types/koa": "2.0.39",
    "@types/koa-compose": "3.2.2",
    "@types/koa-router": "7.0.22",
    "@types/koa-static": "3.0.0",
    "@types/mz": "0.0.31",
    "@types/node": "7.0.29",
    "@types/request-promise-native": "1.0.5",
    "@types/supertest": "2.0.0",
    "@types/tv4": "1.2.28",
    "@types/winston": "2.3.3",
    "babel-cli": "6.24.1",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.0.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "css-loader": "0.28.4",
    "debug": "2.6.8",
    "eslint": "4.0.0",
    "eslint-plugin-babel": "4.1.1",
    "eslint-plugin-prettier": "2.1.1",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-react": "7.0.1",
    "extract-text-webpack-plugin": "2.1.2",
    "file-loader": "0.11.2",
    "html-webpack-plugin": "2.28.0",
    "isomorphic-fetch": "2.2.1",
    "jest": "20.0.4",
    "nodemon": "1.11.0",
    "prettier": "1.4.4",
    "prop-types": "15.5.10",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "rimraf": "2.6.1",
    "style-loader": "0.18.2",
    "supertest": "3.0.0",
    "swagger-ui": "3.0.14",
    "ts-jest": "20.0.6",
    "ts-node": "3.0.6",
    "tslint": "5.4.3",
    "typescript": "2.3.4",
    "webpack": "2.6.1",
    "webpack-koa2-middleware": "1.0.3",
    "yaml-js": "0.1.5"
  },
  "dependencies": {
    "express-winston": "2.4.0",
    "koa": "2.2.0",
    "koa-compose": "4.0.0",
    "koa-router": "7.2.0",
    "koa-static": "3.0.0",
    "mz": "2.6.0",
    "request-promise-native": "1.0.4",
    "tv4": "1.3.0",
    "typeconf": "0.3.0",
    "winston": "2.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.test.ts$",
    "mapCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ]
  }
}
