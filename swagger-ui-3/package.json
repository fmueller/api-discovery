{
  "name": "api-discovery-ui",
  "version": "0.1.0",
  "description": "API Discovery Swagger UI",
  "private": true,
  "main": "dist/server/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "build-client": "webpack",
    "build-server": "tsc -p server",
    "build": "npm run build-server && npm run build-client",
    "dist-cpy": "cpy static/**/* dist --parents",
    "dist-scm": "scm-source > dist/scm-source.json",
    "dist-client": "NODE_ENV=production npm run build-client -- -p",
    "dist": "npm run clean && npm run dist-cpy && npm run dist-scm && npm run build-server && npm run dist-client",
    "dev": "API_DISCOVERY_CONF=conf/development.yaml nodemon server/index.ts",
    "start": "NODE_ENV=production API_DISCOVERY_CONF=conf/production.yaml node dist/server/index.js",
    "lint-client": "eslint client && tslint --type-check --project client/tsconfig.json",
    "lint-server": "tslint --type-check -e *.js -e webpack.config.js --project server/tsconfig.json",
    "lint": "npm run lint-client && npm run lint-server",
    "test": "npm run lint && API_DISCOVERY_CONF=conf/test.yaml jest --coverage",
    "prettier": "prettier --print-width=100 --single-quote --write \"{client,server}/**/*.+(js|ts)\""
  },
  "devDependencies": {
    "@types/debug": "0.0.29",
    "@types/ejs": "2.3.33",
    "@types/express": "4.0.36",
    "@types/extract-text-webpack-plugin": "2.1.0",
    "@types/html-webpack-plugin": "2.28.0",
    "@types/jest": "20.0.1",
    "@types/koa": "2.0.39",
    "@types/koa-compose": "3.2.2",
    "@types/koa-mount": "2.0.18",
    "@types/koa-router": "7.0.22",
    "@types/koa-send": "3.3.0",
    "@types/koa-static": "3.0.0",
    "@types/mz": "0.0.31",
    "@types/node": "8.0.0",
    "@types/prop-types": "15.5.1",
    "@types/react": "15.0.27",
    "@types/react-select": "1.0.47",
    "@types/request-promise-native": "1.0.5",
    "@types/reselect": "2.2.0",
    "@types/superagent": "3.5.0",
    "@types/supertest": "2.0.1",
    "@types/tv4": "1.2.28",
    "@types/webpack": "2.2.16",
    "@types/winston": "2.3.3",
    "awesome-typescript-loader": "3.1.3",
    "babel-cli": "6.24.1",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.0.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "cpy-cli": "1.0.1",
    "css-loader": "0.28.4",
    "debug": "2.6.8",
    "eslint": "4.0.0",
    "eslint-plugin-babel": "4.1.1",
    "eslint-plugin-prettier": "2.1.2",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-react": "7.1.0",
    "extract-text-webpack-plugin": "2.1.2",
    "file-loader": "0.11.2",
    "html-webpack-plugin": "2.28.0",
    "immutable": "3.8.1",
    "jest": "20.0.4",
    "node-scm-source": "0.2.0",
    "nodemon": "1.11.0",
    "prettier": "1.4.4",
    "prop-types": "15.5.10",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "rimraf": "2.6.1",
    "source-map-loader": "0.2.1",
    "style-loader": "0.18.2",
    "supertest": "3.0.0",
    "swagger-ui": "3.0.16",
    "ts-jest": "20.0.6",
    "ts-node": "3.0.6",
    "tslint": "5.4.3",
    "typescript": "2.3.4",
    "webpack": "2.6.1",
    "webpack-koa2-middleware": "1.0.3",
    "yaml-js": "0.1.5"
  },
  "dependencies": {
    "ejs": "2.5.6",
    "express-winston": "2.4.0",
    "koa": "2.2.0",
    "koa-compose": "4.0.0",
    "koa-mount": "3.0.0",
    "koa-router": "7.2.1",
    "koa-send": "4.1.0",
    "koa-static": "3.0.0",
    "mz": "2.6.0",
    "react-select": "1.0.0-rc.5",
    "request-promise-native": "1.0.4",
    "reselect": "3.0.1",
    "superagent": "3.5.2",
    "tv4": "1.3.0",
    "typeconf": "0.3.0",
    "winston": "2.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
      "__TS_CONFIG__": "./server/tsconfig.json"
    },
    "testRegex": "/test/.*\\.test.ts$",
    "mapCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ]
  }
}
