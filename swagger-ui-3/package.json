{
  "name": "api-discovery-ui",
  "version": "0.1.0",
  "description": "API Discovery Swagger UI",
  "private": true,
  "main": "dist/server/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "build-client": "webpack",
    "build-server": "tsc -p .",
    "build": "npm run build-server && npm run build-client",
    "dist": "npm run clean && npm run build-server && NODE_ENV=production npm run build-client -- -p",
    "start-dist": "npm run dist && NODE_ENV=production API_DISCOVERY_BASE_DIR=./dist/server node dist/server/index.js",
    "start": "API_DISCOVERY_ENABLE_WEBPACK_DEV=true nodemon server/index.ts",
    "lint": "tslint --type-check --project tsconfig.json",
    "test": "npm run lint && jest --coverage",
    "prettier": "prettier --print-width=100 --single-quote --write \"{client}/**/*.js\""
  },
  "devDependencies": {
    "@types/jest": "19.2.3",
    "@types/koa": "2.0.39",
    "@types/koa-compose": "3.2.2",
    "@types/koa-router": "7.0.22",
    "@types/koa-static": "2.0.22",
    "@types/node": "7.0.18",
    "@types/supertest": "2.0.0",
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-loader": "7.0.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "css-loader": "0.28.0",
    "debug": "2.6.6",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "html-webpack-plugin": "2.28.0",
    "isomorphic-fetch": "2.2.1",
    "jest": "20.0.1",
    "nodemon": "1.11.0",
    "prettier": "1.2.2",
    "prop-types": "15.5.8",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "rimraf": "2.6.1",
    "style-loader": "0.16.1",
    "supertest": "3.0.0",
    "swagger-ui": "3.0.7",
    "ts-jest": "20.0.3",
    "ts-node": "3.0.4",
    "tslint": "5.2.0",
    "typescript": "2.3.2",
    "webpack": "2.4.1",
    "webpack-koa2-middleware": "1.0.1",
    "yaml-js": "0.1.5"
  },
  "dependencies": {
    "koa": "2.2.0",
    "koa-compose": "4.0.0",
    "koa-router": "7.1.1",
    "koa-static": "3.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.test.ts$",
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ]
  }
}
